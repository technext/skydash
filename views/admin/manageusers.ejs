<%- include ("adminheader.ejs") %>
  <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <p class="card-title mb-0" style="color: #5757b6; font-size: 25px;">User Management Section</p>
                  <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                      <thead>
                        <tr>
                          <th>ID </th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Country</th>
                          <th> Info </th>
                          <th> Status </th>
                          <th> Action </th>
                        </tr>  

                        <%  for(let row of userDetails) { %> 
                      </thead>
                      <tbody>
											  <tr>
											      <td> <%- row._id %> </td>
											      <td class="font-weight-bold" > <%- row.username %> </td>
											      <td class="font-weight-medium"><div class="badge badge-success"> <%- row.email %> </td>
											      <td> <%- row.country %> </td>
											      <td> <%- row.info %> </td>
											      <td>  
											  <% if(row.status) { %>

											 <a href="/admin/manageuserstatus/block/<%- row._id %>">  <img src="../../img/unblock.jpg" height="70" width="50" /> </a>

											          <% } else { %>

											<a href="/admin/manageuserstatus/verify/<%- row._id %>">  <img src="../../img/block.png" height="70" width="50" /> </a>


											    <% } %>


											</td>

											      <td>

											    <a href="/admin/manageuserstatus/delete/<%- row._id %>">  <img src="../../img/delete.png" height="70" width="50" /> </a>

											      </td>

											  </tr>

          
                        
                      </tbody>
        							<% } %>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
          </div>


          <%- include ("footer.ejs") %>